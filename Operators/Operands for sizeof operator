#include <stdio.h>
int main()
{
	printf("%lu\n", sizeof(char));
	printf("%lu\n", sizeof(int));
	printf("%lu\n", sizeof(float));
	printf("%lu", sizeof(double));
	return 0;
}





#include <iostream>
using namespace std;

int main()
{
	cout << sizeof(char)<<"\n";
	cout << sizeof(int)<<"\n";
	cout << sizeof(float)<<"\n";
	cout << sizeof(double)<<"\n";
	return 0;
}






#include <stdio.h>

int main()
{
	int i = 5;
	int int_size = sizeof(i++);
	printf("\n size of i = %d", int_size);
	printf("\n Value of i = %d", i);

	getchar();
	return 0;
}











#include <iostream>
using namespace std;

int main()
{
	int i = 5;
	int int_size = sizeof(i++);
	cout << "\n size of i = " << int_size;
	cout << "\n Value of i = " << i;

	return 0;
}
