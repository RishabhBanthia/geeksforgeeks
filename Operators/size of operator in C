#include <stdio.h>
int main()
{
	printf("%lu\n", sizeof(char));
	printf("%lu\n", sizeof(int));
	printf("%lu\n", sizeof(float));
	printf("%lu", sizeof(double));
	return 0;
}






#include <iostream>
using namespace std;

int main()
{
	cout << sizeof(char)<<"\n";
	cout << sizeof(int)<<"\n";
	cout << sizeof(float)<<"\n";
	cout << sizeof(double)<<"\n";
	return 0;
}






#include <stdio.h>
int main()
{
	int a = 0;
	double d = 10.21;
	printf("%lu", sizeof(a + d));
	return 0;
}






#include <iostream>
using namespace std;
int main()
{
	int a = 0;
	double d = 10.21;
	cout << sizeof(a + d));
	return 0;
}






#include <iostream>

using namespace std;
int main() {


int y;

int x = 11;

y = sizeof(x++); //value of x doesn't change

cout<<y<<" "<<x;// prints 4 11

}
