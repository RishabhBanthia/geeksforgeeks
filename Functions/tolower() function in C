#include <ctype.h>
#include <stdio.h>
  
int main()
{
    char ch = 'G';
    printf("%c in lowercase is represented as = %c", ch, tolower(ch));
  
    return 0;
}














  
#include <ctype.h>
#include <stdio.h>
  
int main()
{
    int j = 0;
    char str[] = "GEEKSFORGEEKS\n";
    char ch = 'G';
    char ch;
  
    while (str[j]) 
    {
        ch = str[j];
        putchar(tolower(ch));
  
        j++;
    }
    return 0;
}
