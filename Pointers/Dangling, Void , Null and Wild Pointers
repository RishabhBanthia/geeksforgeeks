#include <stdlib.h>
#include <stdio.h>
int main()
{
    int *ptr = (int *)malloc(sizeof(int));
    free(ptr);
    ptr = NULL;
}









Function Call
#include<stdio.h>

int *fun()
{
    int x = 5;
    return &x;
}

// Driver Code
int main()
{
    int *p = fun();
    fflush(stdin);
    printf("%d", *p);
    return 0;
}










#include<stdio.h>

int *fun()
{
    static int x = 5;

    return &x;
}
int main()
{
    int *p = fun();
    fflush(stdin);
    printf("%d",*p);
}










Variable goes out of scope
void main()
{
   int *ptr;
   .....
   .....
   {
       int ch;
       ptr = &ch;
   } 
   .....   
}










Example:

#include<stdlib.h>

int main()
{
    int x = 4;
    float y = 5.5;
    
    //A void pointer
    void *ptr;
    ptr = &x;

    // (int*)ptr - does type casting of void 
    // *((int*)ptr) dereferences the typecasted 
    // void pointer variable.
    printf("Integer variable is = %d", *( (int*) ptr) );

    // void pointer is now float
    ptr = &y; 
    printf("\nFloat variable is= %f", *( (float*) ptr) );

    return 0;
}




#include <stdio.h>
int main()
{
    // Null Pointer
    int *ptr = NULL;
    
    printf("The value of ptr is %p", ptr);
    return 0;
}




int main()
{
    int *p;  /* wild pointer */

    int x = 10;

    // p is not a wild pointer now
    p = &x;

    return 0;
}
