/*Program 1 --> For loop*/
for (<init-stmnt>; <boolean-expr>; <incr-stmnt>)
{
    <body-statements>
}

/*Program 2 --> While loop*/
<init-stmnt>;
while (<boolean-expr>)
{
    <body-statements>
    <incr-stmnt>
}









int main()
{
int i = 0;
for(i = 0; i < 3; i++)
{
	printf("loop ");
	continue;
}
getchar();
return 0;
}









int main()
{
int i = 0;
while(i < 3)
{
	printf("loop");
	continue;
	i++;
}
getchar();
return 0;
}
