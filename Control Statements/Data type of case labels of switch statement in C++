#include<stdio.h>
int main()
{
    int i = 10;
    int c = 10;
    switch(c)
    {
	    case i:
		    printf("Value of c = %d", c);
		    break;					
    }
    return 0;
}









#include<stdio.h>
int main()
{
const int i = 10;
int c = 10;
switch(c)
{
	case i:
		printf("Value of c = %d", c);
		break;		
}
return 0;
}












#include<stdio.h>
int main()
{
int n1=10,n2=11;

switch((int)(n1 > n2))
{
	case 0:
		printf("%d is the largest\n", n2);
		break;
	default:
		printf("%d is the largest\n", n1);
}

switch((int)(n1 < n2))
{
	case 0:
		printf("%d is the largest\n", n1);
		break;
	default:
		printf("%d is the largest\n", n2);
}

return 0;
}
