// C program to illustrate while(1)
#include <stdio.h>
int main()
{
	int i = 0;
	while (1) {
		printf("%d\n", ++i);
		if (i == 5)
			break; // Used to come
				// out of loop
	}
	return 0;
}








#include <iostream>
using namespace std;

int main()
{
	int i = 0;
	while (1) {
		cout << ++i << "\n";
		if (i == 5)
			// Used to come
			// out of loop
			break;
	}
	return 0;
}
