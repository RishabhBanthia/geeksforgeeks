#include <stdio.h>
const int M = 3;
const int N = 3;

void print(int arr[M][N])
{
	int i, j;
	for (i = 0; i < M; i++)
	for (j = 0; j < N; j++)
	{
		printf("%d ", arr[i][j]);
	}
}
int main()
{
	int arr[][3] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
	print(arr);
	return 0;
}











#include <stdio.h>
const int N = 3;

void print(int arr[][N], int m)
{
	int i, j;
	for (i = 0; i < m; i++)
	for (j = 0; j < N; j++)
	{
		printf("%d ", arr[i][j]);
	}
}
int main()
{
	int arr[][3] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
	print(arr, 3);
	return 0;
}








#include <stdio.h>
void print(int m, int n, int arr[][n])
{
	int i, j;
	for (i = 0; i < m; i++)
	for (j = 0; j < n; j++)
	{
		printf("%d ", arr[i][j]);
	}
}
int main()
{
	int arr[][3] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
	int m = 3, n = 3;
	print(m, n, arr);
	return 0;
}










#include <stdio.h>
void print(int *arr, int m, int n)
{
	int i, j;
	for (i = 0; i < m; i++)
	for (j = 0; j < n; j++)
	{
		printf("%d ", *((arr+i*n) + j));
	}
}
int main()
{
	int arr[][3] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
	int m = 3, n = 3;
	print((int *)arr, m, n);
	return 0;
}








#include <stdio.h>
const int M = 3;


void print(int (*arr)[M])
{
	int i, j;
	for (i = 0; i < M; i++)
	for (j = 0; j < M; j++)
		printf("%d ", arr[i][j]);
}

int main()
{
	int arr[][3] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
	print(arr);
	return 0;
}
