#include <stdio.h>

// macro definition
#define LIMIT 5
int main()
{
	for (int i = 0; i < LIMIT; i++) {
		printf("%d \n",i);
	}

	return 0;
}







#include <iostream>

// macro definition
#define LIMIT 5
int main()
{
	for (int i = 0; i < LIMIT; i++) {
		std::cout << i << "\n";
	}

	return 0;
}







#include <stdio.h>

// macro with parameter
#define AREA(l, b) (l * b)
int main()
{
	int l1 = 10, l2 = 5, area;

	area = AREA(l1, l2);

	printf("Area of rectangle is: %d", area);

	return 0;
}









#include <iostream>

// macro with parameter
#define AREA(l, b) (l * b)
int main()
{
	int l1 = 10, l2 = 5, area;

	area = AREA(l1, l2);

	std::cout << "Area of rectangle is: " << area;

	return 0;
}
